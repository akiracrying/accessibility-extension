{
  "manifest_version": 3,
  "version": "1.0",
  "short_name": "AccessEXT",
  "name": "Accessibility extension",
  "description": "This powerful browser extension has been meticulously designed to enhance your browsing accessibility, making it easier than ever to navigate the web",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "logo192.png",
      "96": "logo512.png"
    }
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches": [
      "https://www.*.*/*",
      "http://www.*.*/*"
    ]
  }],
  "icons": {
    "48": "logo192.png",
    "96": "logo512.png"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "scripting"
  ],
  "host_permissions": [
    "https://www.*.*/*",
    "http://www.*.*/*"
  ]
}
